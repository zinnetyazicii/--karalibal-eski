  "StatsPosition": {
    "type": "Radio",
    "value": "before",
    "rules": {
      "before": {
        ".product-thumb .name": "order:initial",
        ".product-thumb .stats": "position: relative; transform: none; width: initial"
      },
      "after": {
        ".product-thumb .name": "order:-1",
