{
  "name": {
    "type": "Input",
    "value": "New Slider"
  },
  "status": {
    "type": "Status"
  },
  "schedule": {
    "type": "Range",
    "php": true
  },
  "autoplay": {
    "type": "Toggle",
    "js": true
  },
  "overPause": {
    "type": "Toggle",
    "js": true
  },
  "shuffle": {
    "type": "Toggle",
    "value": "false",
    "js": true
  },
  "view": {
    "type": "Select",
    "js": true,
    "value": "basic"
  },
  "imageDimensions": {
    "type": "ImageDimensions",
    "value": {
      "resize": "fill"
    },
    "php": true
  },
  "sliderDimensions": {
    "type": "InputPair"
  },
  "parallaxMode": {
    "type": "Toggle",
    "value": "false",
    "php": true
  },
  "parallax": {
    "type": "InputSlider",
    "value": "25",
    "php": true
  },
  "layout": {
    "type": "Radio",
    "value": "default",
    "php": true
  },
  "bg": {
    "type": "Background",
    "selector": ".module-fullscreen_slider-%s .ms-container"
  },
  "autoHeight": {
    "type": "Toggle",
    "value": "false",
    "rules": {
      "true": {
        ".module-fullscreen_slider > img": "width:100%"
      }
    }
  },
  "loop": {
    "type": "Toggle",
    "value": "false"
  },
  "direction": {
    "type": "Radio",
    "value": "h"
  },
  "speed": {
    "type": "Input",
    "value": "30",
    "js": true
  },


  "arrows": {
    "type": "Toggle"
  },
  "arrowsHide": {
    "type": "Toggle",
    "value": "false",
    "rules": {
      "true": {
        ".desktop .module-fullscreen_slider-%s .ms-nav-next": "opacity: 0",
        ".desktop .module-fullscreen_slider-%s .ms-nav-prev": "opacity: 0",
        ".desktop .module-fullscreen_slider-%s .ms-container:hover .ms-nav-next": "opacity: 1",
        ".desktop .module-fullscreen_slider-%s .ms-container:hover .ms-nav-prev": "opacity: 1"
      }
    }
  },
  "arrowsVisibility": {
    "type": "Toggle",
    "value": "true",
    "rules": {
      "true": {
        ".module-fullscreen_slider-%s .ms-nav-next": "display: flex",
        ".module-fullscreen_slider-%s .ms-nav-prev": "display: flex"
      },
      "false": {
        ".module-fullscreen_slider-%s .ms-nav-next": "display: none",
        ".module-fullscreen_slider-%s .ms-nav-prev": "display: none"
      }
    }
  },
  "arrowsAlign": {
    "type": "Radio",
    "value": "side",
    "rules": {
      "side": {
        ".module-fullscreen_slider-%s .ms-nav-next": "left:auto; right:0; top:50%; bottom:auto; transform: translateY(-50%);",
        ".module-fullscreen_slider-%s .ms-nav-prev": "left:0; right:auto; top:50%; bottom:auto; transform: translateY(-50%);"
      },
      "top": {
        ".module-fullscreen_slider-%s .ms-nav-next": "left:50%; right:auto; top:0; bottom:auto; transform: translateX(0);",
        ".module-fullscreen_slider-%s .ms-nav-prev": "left:50%; right:auto; top:0; bottom:auto; transform: translateX(-100%);"
      },
      "right": {
        ".module-fullscreen_slider-%s .ms-nav-next": "left:auto; right:0; top:50%; bottom:auto; transform: translateY(-100%);",
        ".module-fullscreen_slider-%s .ms-nav-prev": "left:auto; right:0; top:50%; bottom:auto; transform: translateY(0);"
      },
      "bottom": {
        ".module-fullscreen_slider-%s .ms-nav-next": "left:50%; right:auto; top:auto; bottom:0; transform: translateX(0);",
        ".module-fullscreen_slider-%s .ms-nav-prev": "left:50%; right:auto; top:auto; bottom:0; transform: translateX(-100%);"
      },
      "left": {
        ".module-fullscreen_slider-%s .ms-nav-next": "left:0; right:auto; top:50%; bottom:auto; transform: translateY(-100%);",
        ".module-fullscreen_slider-%s .ms-nav-prev": "left:0; right:auto; top:50%; bottom:auto; transform: translateY(0);"
      }
    }
  },
  "arrowsOffset": {
    "type": "InputPair",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next, .module-fullscreen_slider-%s .ms-nav-prev",
    "properties": {
      "first": "margin-left:%spx; margin-right:%spx;",
      "second": "margin-top:%spx; margin-bottom:%spx;"
    }
  },
  "arrowIcon": {
    "type": "Icon",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next::before, .module-fullscreen_slider-%s .ms-nav-prev::before",
    "value": {
      "icon": {
        "name": "arrow_forward",
        "code": "e5c8"
      }
    }
  },
  "arrowIconHover": {
    "type": "Color",
    "selector": ".desktop .module-fullscreen_slider-%s .ms-nav-next:hover::before, .desktop .module-fullscreen_slider-%s .ms-nav-prev:hover::before",
    "property": "color"
  },
  "arrowSize": {
    "type": "InputPair",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next, .module-fullscreen_slider-%s .ms-nav-prev",
    "value": {
      "first":"50",
      "second":"50"
    },
    "properties": {
      "first": "width:%spx",
      "second": "height:%spx"
    }
  },
  "arrowBG": {
    "type": "Background",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next, .module-fullscreen_slider-%s .ms-nav-prev"
  },
  "arrowBGHover": {
    "type": "Background",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next:hover, .module-fullscreen_slider-%s .ms-nav-prev:hover"
  },
  "arrowBorder": {
    "type": "Border",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next, .module-fullscreen_slider-%s .ms-nav-prev"
  },
  "arrowBorderHover": {
    "type": "Color",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next:hover, .module-fullscreen_slider-%s .ms-nav-prev:hover",
    "property": "border-color"
  },
  "arrowBorderRadius": {
    "type": "BorderRadius",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next, .module-fullscreen_slider-%s .ms-nav-prev"
  },
  "arrowShade": {
    "type": "Shadow",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next, .module-fullscreen_slider-%s .ms-nav-prev"
  },
  "arrowShadeHover": {
    "type": "Shadow",
    "selector": ".module-fullscreen_slider-%s .ms-nav-next:hover, .module-fullscreen_slider-%s .ms-nav-prev:hover"
  },


  "bullets": {
    "type": "Toggle"
  },
  "bulletsHover": {
    "type": "Toggle",
    "value": "false",
    "rules": {
      "true": {
        ".desktop .module-fullscreen_slider-%s .ms-container .ms-bullets": "opacity: 0",
        ".desktop .module-fullscreen_slider-%s .ms-container:hover .ms-bullets": "opacity: 1"
      }
    }
  },
  "bulletsVisibility": {
    "type": "Toggle",
    "value": "true",
    "rules": {
      "true": {
        ".module-fullscreen_slider-%s .ms-bullets": "display: block"
      },
      "false": {
        ".module-fullscreen_slider-%s .ms-bullets": "display: none"
      }
    }
  },
  "bulletsAlign": {
    "type": "Radio",
    "value": "bottom",
    "rules": {
      "top": {
        ".module-fullscreen_slider-%s .ms-bullets": "top:0; bottom:auto; left:50%; right:auto; transform: translateX(-50%);",
        ".module-fullscreen_slider-%s .ms-bullets .ms-bullets-count": "flex-direction:row"
      },
      "right": {
        ".module-fullscreen_slider-%s .ms-bullets": "top:50%; bottom:auto; left:auto; right:0; transform: translateY(-50%);",
        ".module-fullscreen_slider-%s .ms-bullets .ms-bullets-count": "flex-direction:column"
      },
      "bottom": {
        ".module-fullscreen_slider-%s .ms-bullets": "top:auto; bottom:0; left:50%; right:auto; transform: translateX(-50%);",
        ".module-fullscreen_slider-%s .ms-bullets .ms-bullets-count": "flex-direction:row"
      },
      "left": {
        ".module-fullscreen_slider-%s .ms-bullets": "top:50%; bottom:auto; left:0; right:auto; transform: translateY(-50%);",
        ".module-fullscreen_slider-%s .ms-bullets .ms-bullets-count": "flex-direction:column"
      }
    }
  },
  "bulletsOffset": {
    "type": "InputPair",
    "selector": ".module-fullscreen_slider-%s .ms-bullets",
    "properties": {
      "first": "margin-left:%spx; margin-right:%spx",
      "second": "margin-top:%spx; margin-bottom:%spx"
    }
  },
  "bulletsBG": {
    "type": "Background",
    "selector": ".module-fullscreen_slider-%s .ms-bullets"
  },
  "bulletsPadding": {
    "type": "Input",
    "selector": ".module-fullscreen_slider-%s .ms-bullets",
    "property": "padding:%spx"
  },
  "bulletsBorderRadius": {
    "type": "BorderRadius",
    "selector": ".module-fullscreen_slider-%s .ms-bullets"
  },


  "bulletSpacing": {
    "type": "Input",
    "value": "5",
    "rules": {
      "@": {
        ".module-fullscreen_slider-%s .ms-bullets .ms-bullet": "margin:calc(%spx / 2) !important"
      }
    }
  },
  "bulletSize": {
    "type": "InputPair",
    "selector": ".module-fullscreen_slider-%s .ms-bullet",
    "properties": {
      "first": "width:%spx",
      "second": "height:%spx"
    }
  },
  "bulletBG": {
    "type": "Background",
    "selector": ".module-fullscreen_slider-%s .ms-bullets .ms-bullet"
  },
  "bulletBGHover": {
    "type": "Background",
    "selector": ".desktop .module-fullscreen_slider-%s .ms-bullets .ms-bullet:hover, .module-fullscreen_slider-%s .ms-bullets .ms-bullet-selected"
  },
  "bullBorder": {
    "type": "Border",
    "selector": ".module-fullscreen_slider-%s .ms-bullets .ms-bullet"
  },
  "bulletBorderHover": {
    "type": "Color",
    "selector": ".desktop .module-fullscreen_slider-%s .ms-bullets .ms-bullet:hover, .module-fullscreen_slider-%s .ms-bullets .ms-bullet-selected",
    "property": "border-color"
  },
  "bulletBorderRadius": {
    "type": "BorderRadius",
    "selector": ".module-fullscreen_slider-%s .ms-bullets .ms-bullet",
    "value": {
      "border-radius":"10"
    }
  },
  "bulletShadow": {
    "type": "Shadow",
    "selector": ".module-fullscreen_slider-%s .ms-bullets .ms-bullet"
  },
  "bulletShadowHover": {
    "type": "Shadow",
    "selector": ".desktop .module-fullscreen_slider-%s .ms-bullets .ms-bullet:hover, .module-fullscreen_slider-%s .ms-bullets .ms-bullet-selected"
  },


  "thumbnails": {
    "type": "Toggle",
    "value": "false",
    "php": true
  },

  "thumbnailsDimensions": {
    "type": "ImageDimensions",
    "value": {
      "width": "50",
      "height": "50",
      "resize": "fill"
    },
    "php": true
  },
  "thumbsVisibility": {
    "type": "Toggle",
    "value": "true",
    "rules": {
      "true": {
        ".module-fullscreen_slider-%s .ms-thumb-list": "display: block"
      },
      "false": {
        ".module-fullscreen_slider-%s .ms-thumb-list": "display: none"
      }
    }
  },
  "thumbsBG": {
    "type": "Background",
    "selector": ".module-fullscreen_slider-%s .ms-thumb-list"
  },
  "thumbsPadding": {
    "type": "Input",
    "selector": ".module-fullscreen_slider-%s .ms-thumb-list",
    "property": "padding:%spx 0",
    "value": "10"
  },
  "thumbSpacing": {
    "type": "Input",
    "selector": ".module-fullscreen_slider-%s .ms-thumb-list .ms-thumb-frame",
    "property": "margin-right:%spx !important",
    "value": "10"
  },
  "thumbOpacity": {
    "type": "Input",
    "selector": ".module-fullscreen_slider-%s .ms-thumb-list .ms-thumb-frame",
    "property": "opacity",
    "value": ".75"
  },
  "thumbBorder": {
    "type": "Border",
    "selector": ".module-fullscreen_slider-%s .ms-thumb-frame",
    "value": {
      "border-width":"0"
    }
  },
  "thumbBorderHover": {
    "type": "Color",
    "property": "border-color",
    "selector": ".desktop .module-fullscreen_slider-%s .ms-thumb-frame:hover, .module-fullscreen_slider-%s .ms-thumb-frame-selected"
  },
  "thumbShadow": {
    "type": "Shadow",
    "selector": ".module-fullscreen_slider-%s .ms-thumb-frame"
  },
  "thumbShadowHover": {
    "type": "Shadow",
    "selector": ".desktop .module-fullscreen_slider-%s .ms-thumb-frame:hover, .module-fullscreen_slider-%s .ms-thumb-frame-selected"
  },
  "thumbBorderRadius": {
    "type": "BorderRadius",
    "selector": ".module-fullscreen_slider-%s .ms-thumb-frame"
  },
  "thumbsAlign": {
    "type": "Radio",
    "value": "bottom",
    "rules": {
      "top": {
        ".module-fullscreen_slider-%s .ms-thumb-list": "top:0 !important; bottom:auto !important; order:0"
      },
      "bottom": {
        ".module-fullscreen_slider-%s .ms-thumb-list": "top:auto !important; bottom:0 !important; order:2;"
      }
    }
  },


  "timer": {
    "type": "Toggle",
    "value": "true"
  },
  "timerVisibility": {
    "type": "Toggle",
    "value": "true",
    "rules": {
      "true": {
        ".module-fullscreen_slider-%s .ms-timerbar": "display: block"
      },
      "false": {
        ".module-fullscreen_slider-%s .ms-timerbar": "display: none"
      }
    }
  },
  "timerPosition": {
    "type": "Radio",
    "value": "top",
    "rules": {
      "top": {
        ".module-fullscreen_slider-%s .ms-timerbar": "top:0 !important; bottom:auto !important"
      },
      "bottom": {
        ".module-fullscreen_slider-%s .ms-timerbar": "top:auto !important; bottom:0 !important"
      }
    }
  },
  "timerColor": {
    "type": "Color",
    "selector": ".module-fullscreen_slider-%s .master-slider .ms-time-bar",
    "property": "background-color",
    "important": true
  },
  "timerHeight": {
    "type": "Input",
    "selector": ".module-fullscreen_slider-%s .master-slider .ms-time-bar",
    "property": "height:%spx !important",
    "value": "4"
  },


  "swipe": {
    "type": "Toggle",
    "value": "true",
    "js": true
  },
  "mouse": {
    "type": "Toggle",
    "value": "false",
    "js": true
  }
}
