{
  "status": {
    "type": "Status"
  },
  "background": {
    "type": "Background",
    "selector": ".grid-row-%s-%s"
  },
  "padding": {
    "type": "Padding",
    "selector": ".grid-row-%s-%s"
  },
  "border": {
    "type": "Border",
    "selector": ".grid-row-%s-%s"
  },
  "shadow": {
    "type": "Shadow",
    "selector": ".grid-row-%s-%s"
  },
  "marginTop": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".grid-row-%s-%s": "margin-top:%spx"
      }
    }
  },
  "margin": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".grid-row-%s-%s": "margin-bottom:%spx"
      }
    }
  },
  "overlayStatus": {
    "type": "Toggle",
    "value": "false",
    "rules": {
      "true": {
        ".grid-row-%s-%s::before": "content:''"
      }
    }
  },
  "overlayVisibility": {
    "type": "Toggle",
    "rules": {
      "true": {
        ".grid-row-%s-%s::before": "display: block"
      },
      "false": {
        ".grid-row-%s-%s::before": "display: none"
      }
    }
  },
  "overlayBackground": {
    "type": "Background",
    "selector": ".grid-row-%s-%s::before"
  },
  "rowOverlayBlend": {
    "type": "Select",
    "selector": ".grid-row-%s-%s::before",
    "property": "mix-blend-mode"
  },
  "overlayBorder": {
    "type": "Border",
    "selector": ".grid-row-%s-%s::before"
  },
  "overlayHeight": {
    "type": "InputNumber",
    "rules":{
      "@":{
        ".grid-row-%s-%s::before": "height:%s%"
      }
    }
  },
  "overlayAlign": {
    "type": "Radio",
    "value": "center",
    "rules": {
      "left": {
        ".grid-row-%s-%s::before": "left: -50%; width:100%"
      },
      "center": {
        ".grid-row-%s-%s::before": "left: 0; width:100vw"
      },
      "right": {
        ".grid-row-%s-%s::before": "left: 50%; width:100vw"
      }
    }
  },
  "overlayRotate": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".grid-row-%s-%s::before": "transform: translate3d(0,0,0) rotate(%sdeg) skew(%sdeg);"
      }
    }
  },
  "overlayTop": {
    "type": "InputNumber",
    "rules":{
      "@":{
        ".grid-row-%s-%s::before": "top:%svw"
      }
    }
  }
}
