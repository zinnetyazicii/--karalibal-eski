{
  "searchStyle": {
    "type": "Variable",
    "variable": "search",
    "selector_prefix": ""
  },
  "searchVisibility": {
    "type": "Toggle",
    "rules": {
      "true": {
        "#search": "display: block"
      },
      "false": {
        "#search": "display: none"
      }
    }
  },
  "headerSearchPosition": {
    "type": "Radio",
    "value": "right",
    "rules": {
      "left": {
        ".desktop-header-active .header-default .desktop-search-wrapper": "order:-1; flex-grow:1",
        ".desktop-header-active .header-default .top-menu-group": "order:2; flex-grow:0"
      },
      "right": {
        ".desktop-header-active .header-default .desktop-search-wrapper": "order:1; flex-grow:0",
        ".desktop-header-active .header-default .top-menu-group": "order:-1; flex-grow:1"
      }
    }
  },
  "searchOffset": {
    "type": "InputPair",
    "selector": ".desktop-header-active .header .full-search #search",
    "properties": {
      "first": "left: %spx",
      "second": "top: %spx"
    },
    "rtlProperties": {
      "first": "right: %spx",
      "second": "top: %spx"
    }
  },
  "searchButtonPosition": {
    "type": "Radio",
    "value": "right",
    "rules": {
      "left": {
        ".desktop-header-active .header-search .search-button": "order:0; border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        ".desktop-header-active .header-search > input:first-child": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        ".desktop-header-active .header-search > input": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        ".desktop-header-active .header-search > span:first-child": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        ".desktop-header-active .header-search > span": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        ".desktop-header-active .search-categories": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        ".tt-menu:not(.tt-empty)::before": "left:10px; transform: translateX(0)"
      },
      "right": {
        ".desktop-header-active .header-search .search-button": "order:5; border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        ".desktop-header-active .header-search > input:first-child": "border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        ".desktop-header-active .header-search > input": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        ".desktop-header-active .header-search > span:first-child": "border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        ".desktop-header-active .header-search > span": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        ".desktop-header-active .search-categories": "border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        ".tt-menu:not(.tt-empty)::before": "left:100%; transform: translateX(-150%)"
      }
    },
    "rtlRules": {
      "left": {
        "html[dir='rtl'].desktop-header-active .header-search .search-button": "order:0; border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        "html[dir='rtl'].desktop-header-active .header-search > input:first-child": "border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'].desktop-header-active .header-search > input": "border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'].desktop-header-active .header-search > span:first-child": "border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'].desktop-header-active .header-search > span": "border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'].desktop-header-active .search-categories": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'] .tt-menu:not(.tt-empty)::before": "left: auto; transform: translateX(0); right: 10px"
      },
      "right": {
        "html[dir='rtl'].desktop-header-active .header-search .search-button": "order:5; border-top-left-radius: inherit; border-bottom-left-radius: inherit; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'].desktop-header-active .header-search > input:first-child": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        "html[dir='rtl'].desktop-header-active .header-search > input": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'].desktop-header-active .header-search > span:first-child": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        "html[dir='rtl'].desktop-header-active .header-search > span": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: 0; border-bottom-right-radius: 0;",
        "html[dir='rtl'].desktop-header-active .search-categories": "border-top-left-radius: 0; border-bottom-left-radius: 0; border-top-right-radius: inherit; border-bottom-right-radius: inherit;",
        "html[dir='rtl'] .tt-menu:not(.tt-empty)::before": "left:auto; right:100%; transform: translateX(150%)"
      }
    }
  },

  "headerSearchWidth": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".desktop-header-active .header .full-search #search": "max-width: %spx"
      }
    }
  },
  "headerSearchInputWidth": {
    "type": "InputNumber",
    "value": "150",
    "rules": {
      "@": {
        ".desktop-header-active .mini-search .header-search input": "min-width: %spx"
      }
    }
  },
  "headerSearchHeight": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".desktop-header-active .header .full-search #search": "height: %spx"
      }
    }
  },
  "headerSearchMargin": {
    "type": "Margin",
    "selector": ".desktop-search-wrapper"
  },

  "headerSearchPadding": {
    "type": "Padding",
    "selector": ".desktop-search-wrapper"
  },



  "headerMiniSearchIcon": {
    "type": "Icon",
    "selector": ".mini-search .search-trigger::before",
    "value": {
      "icon": {
        "name": "search",
        "code": "f002"
      }
    }
  },
  "headerMiniSearchIconHover": {
    "type": "Color",
    "property": "color:%s",
    "selector": ".desktop-header-active .mini-search:hover .search-trigger::before"
  },
  "headerMiniSearchBG": {
    "type": "Background",
    "selector": ".mini-search .search-trigger"
  },
  "headerMiniSearchBGHover": {
    "type": "Background",
    "selector": ".mini-search:hover .search-trigger",
    "desktop": true
  },
  "headerMiniSearchBorder": {
    "type": "Border",
    "selector": ".desktop-header-active .mini-search .search-trigger"
  },
  "headerMiniSearchBorderRadius": {
    "type": "BorderRadius",
    "selector": ".desktop-header-active .mini-search .search-trigger"
  },
  "headerMiniSearchBorderHover": {
    "type": "Color",
    "property": "border-color",
    "selector": ".desktop-header-active .mini-search:hover .search-trigger"
  },
  "headerSearchBorderRadius": {
    "type": "BorderRadius",
    "selector": ".desktop-header-active .mini-search .header-search"
  },
  "headerMiniSearchIconSize": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".mini-search .search-trigger": "width:%spx; height:%spx"
      }
    }
  },
  "headerMiniSearchMargin": {
    "type": "Margin",
    "selector": ".desktop-header-active .mini-search"
  },
  "headerMiniSearchShadow": {
    "type": "Shadow",
    "selector": ".desktop-header-active .mini-search .search-trigger"
  },
  "headerMiniSearchShadowHover": {
    "type": "Shadow",
    "selector": ".desktop-header-active .mini-search:hover .search-trigger"
  },
  "headerMiniSearchSize": {
    "type": "InputPair",
    "selector": ".mini-search #search .header-search",
    "properties": {
      "first": "width:%spx",
      "second": "height:%spx"
    }
  },
  "headerMiniSearchDropdownShadow": {
    "type": "Shadow",
    "selector": ".mini-search .header-search"
  },
  "miniSearchTriangle": {
    "include": "triangle",
    "selector_prefix": ".mini-search #search > .dropdown-menu"
  },
  "headerMiniSearchDropdownBackground": {
    "type": "Background",
    "selector": ".desktop .mini-search #search .header-search"
  },
  "headerMiniSearchDropdownPadding": {
    "type": "InputNumber",
    "rules": {
      "@": {
        ".mini-search #search .header-search": "padding:%spx"
      }
    },
    "php": true
  },
  "headerMiniSearchDisplay": {
    "type": "Radio",
    "value": "default",
    "php": true,
    "js": true,
    "rules": {
      "page": {
        ".desktop.search-page .mini-search #search > .dropdown-menu":"position: fixed; width: 100%; top: 0; z-index:100000",
        ".desktop.search-page .mini-search #search .header-search":"width:100%",
        ".desktop.search-page .header-cart-group":"z-index:9999999999 !important",
        ".desktop.search-page .mini-search .animating > .j-dropdown":"transition: transform .2s ease",
        ".desktop.search-page .mini-search .tt-menu":"padding-left:",
        ".desktop.search-page #search.animating::before":"content: ''; width: 100%; height: 100vh; position: fixed; left: 0; top: 0; z-index: -1; pointer-events:none"
      }
    }
  },
  "headerMiniSearchOffset": {
    "type": "InputNumber",
    "rules":{
      "@":{
        ".desktop:not(.search-page) .mini-search #search .header-search": "position:relative; left:%spx"
      }
    },
    "rtlRules":{
      "@":{
        ".desktop:not(.search-page) .mini-search #search .header-search": "position:relative; right:%spx"
      }
    }
  },
  "headerMiniSearchBackdrop": {
    "type": "Background",
    "selector": ".desktop.search-page #search.animating::before"
  },
  "headerMiniSearchPageMargin": {
    "type": "Margin",
    "selector": ".desktop.search-page .mini-search #search > .dropdown-menu"
  }
}

