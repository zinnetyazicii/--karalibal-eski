    "type": "Radio",
    "value": "tl",
    "rules": {
      "tl": {
        ".module-master_slider-%s .static-text-1": "top:0; left:0; right:auto; bottom: auto; transform: none"
      },
      "tc": {
        ".module-master_slider-%s .static-text-1": "top:0; left:50%; right:auto; bottom: auto; transform: translate3d(-50%, 0, 0)"
      },
      "tr": {
        ".module-master_slider-%s .static-text-1": "top:0; left:auto; right:0; bottom: auto; transform: translate3d(0, 0, 0)"
      },
      "center": {
        ".module-master_slider-%s .static-text-1": "top:50%; left:50%; right:auto; bottom: auto; transform: translate3d(-50%, -50%, 0)"
      },
      "bl": {
        ".module-master_slider-%s .static-text-1": "top:auto; left:0; right:auto; bottom: 0; transform: translate3d(0, 0, 0)"
      },
      "bc": {
        ".module-master_slider-%s .static-text-1": "top:auto; left:50%; right:auto; bottom: 0; transform: translate3d(-50%, 0, 0)"
      },
      "br": {
        ".module-master_slider-%s .static-text-1": "top:auto; left:auto; right:0; bottom: 0; transform: translate3d(0, 0, 0)"
      }
    }
  },

  "staticScale": {
    "type": "InputSlider",
    "value": "100",
    "rules": {
      "@": {
        ".module-master_slider-%s .static-text-1 span": "transform:scale(calc(%s / 100))"
      }
