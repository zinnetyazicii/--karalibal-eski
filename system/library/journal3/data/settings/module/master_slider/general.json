        ".module-master_slider-%s .ms-nav-next": "left:auto; right:0; top:50%; bottom:auto; transform: translateY(-100%);",
        ".module-master_slider-%s .ms-nav-prev": "left:auto; right:0; top:50%; bottom:auto; transform: translateY(0);"
      },
      "bottom": {
        ".module-master_slider-%s .ms-nav-next": "left:50%; right:auto; top:auto; bottom:0; transform: translateX(0);",
        ".module-master_slider-%s .ms-nav-prev": "left:50%; right:auto; top:auto; bottom:0; transform: translateX(-100%);"
      },
      "left": {
        ".module-master_slider-%s .ms-nav-next": "left:0; right:auto; top:50%; bottom:auto; transform: translateY(-100%);",
        ".module-master_slider-%s .ms-nav-prev": "left:0; right:auto; top:50%; bottom:auto; transform: translateY(0);"
