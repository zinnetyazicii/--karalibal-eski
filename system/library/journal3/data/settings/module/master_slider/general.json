      "side": {
        ".module-master_slider-%s .ms-nav-next": "left:auto; right:0; top:50%; bottom:auto; transform: translateY(-50%);",
        ".module-master_slider-%s .ms-nav-prev": "left:0; right:auto; top:50%; bottom:auto; transform: translateY(-50%);"
