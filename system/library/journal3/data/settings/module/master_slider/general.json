      },
      "bl": {
        ".module-master_slider-%s .static-text-2": "top:auto; left:0; right:auto; bottom: 0; transform: translate3d(0, 0, 0)"
      },
      "bc": {
        ".module-master_slider-%s .static-text-2": "top:auto; left:50%; right:auto; bottom: 0; transform: translate3d(-50%, 0, 0)"
      },
      "br": {
        ".module-master_slider-%s .static-text-2": "top:auto; left:auto; right:0; bottom: 0; transform: translate3d(0, 0, 0)"
      }
    }
