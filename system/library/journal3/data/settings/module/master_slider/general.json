    "type": "InputPair",
    "selector": ".module-master_slider-%s .ms-nav-next, .module-master_slider-%s .ms-nav-prev",
    "properties": {
      "first": "margin-left:%spx; margin-right:%spx;",
      "second": "margin-top:%spx; margin-bottom:%spx;"
