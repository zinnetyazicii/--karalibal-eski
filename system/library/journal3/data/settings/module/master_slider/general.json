  },

  "staticScaleOrigin": {
    "type": "Radio",
    "value": "center",
    "rules": {
      "tl": {
        ".module-master_slider-%s .static-text-1 span": "transform-origin: top left"
      },
      "tr": {
        ".module-master_slider-%s .static-text-1 span": "transform-origin: top right"
      },
      "center": {
        ".module-master_slider-%s .static-text-1 span": "transform-origin: center"
      },
      "bl": {
        ".module-master_slider-%s .static-text-1 span": "transform-origin: bottom left"
      },
      "br": {
        ".module-master_slider-%s .static-text-1 span": "transform-origin: bottom right"
      }
    }
  },

  "static2Container": {
    "type": "Variable",
