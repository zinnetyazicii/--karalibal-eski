  },
  "postImageBorderRadius": {
    "type": "BorderRadius",
    "selector": ".post-image img"
  },
  "postImageShadow": {
    "type": "Shadow",
    "selector": ".post-image img"
  },

  "postColumns": {
    "type": "Radio",
    "value": "initial",
    "selector": ".post-content",
    "property": "column-count:%s"
  },
  "postColumnGap": {
    "type": "InputNumber",
    "selector": ".post-content",
    "property": "column-gap:%spx",
    "value": "20"
  },
  "postColumnDividerColor": {
    "type": "Color",
    "selector": ".post-content",
    "property": "column-rule-color"
  },
  "postColumnDividerWidth": {
    "type": "InputNumber",
    "selector": ".post-content",
    "property": "column-rule-width:%spx"
  },
  "postColumnDividerStyle": {
    "type": "Select",
    "selector": ".post-content",
    "property": "column-rule-style",
    "value": "none"
  },
  "postTags": {
    "type": "Variable",
    "variable": "tags",
    "selector_prefix": ".blog-post"
  },
  "postTagsAlign": {
    "type": "Radio",
    "value": "center",
    "rules": {
      "left": {
        ".blog-post .tags": "justify-content:flex-start"
