  "postStatsBorderRadius": {
    "type": "BorderRadius",
    "selector": ".blog-post .post-details .post-stats"
  },
  "postStatsShadow": {
    "type": "Shadow",
    "selector": ".blog-post .post-details .post-stats"
  },
  "postStatVisibility": {
    "type": "Toggle",
    "value": "true",
    "rules": {
      "true": {
        ".blog-post .post-details .post-stats .p-posted": "display:inline-flex"
      },
      "false": {
        ".blog-post .post-details .post-stats .p-posted": "display:none"
      }
    }
  },
  "postAuthorVisibility": {
    "type": "Toggle",
    "value": "true",
