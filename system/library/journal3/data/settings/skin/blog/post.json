{
  "postContentBackground": {
    "type": "Background",
    "selector": ".blog-post #content"
  },
  "postContentPadding": {
    "type": "Padding",
    "selector": ".blog-post #content"
  },
  "postTitle": {
    "type": "Variable",
    "variable": "title",
    "selector_prefix": ".blog-post .page-title"
  },
  "postStatsScroll": {
    "type": "Toggle",
    "rules": {
      "true": {
        ".blog-post .post-details .post-stats": "white-space: nowrap; overflow-x: auto; overflow-y: hidden",
        ".blog-post .post-details .post-stats .p-category": "flex-wrap:nowrap",
        ".mobile .blog-post .post-details .post-stats": "overflow-x: scroll",
        ".blog-post .post-details .post-stats::-webkit-scrollbar": "-webkit-appearance: none; height: 1px",
        ".blog-post .post-details .post-stats::-webkit-scrollbar-track": "background-color: white",
        ".blog-post .post-details .post-stats::-webkit-scrollbar-thumb": "background-color: #999"
      }
    }
  },
  "postStatsScrollColor": {
    "type": "Color",
    "selector": ".blog-post .post-details .post-stats::-webkit-scrollbar-thumb",
    "property": "background-color"
  },
  "postStatsTrackColor": {
    "type": "Color",
    "selector": ".blog-post .post-details .post-stats::-webkit-scrollbar-track",
    "property": "background-color"
  },
  "postStatsTrackHeight": {
    "type": "InputNumber",
    "value": "1",
    "rules":{
      "@":{
        ".blog-post .post-details .post-stats::-webkit-scrollbar": "height:%spx; width: %spx"
      }
    }
  },
  "postStatsScrollTouch": {
    "type": "Toggle",
    "value": "true",
    "rules": {
      "true": {
        ".blog-post .post-details .post-stats": "-webkit-overflow-scrolling:touch;"
      }
    }
  },
  "postStatsFont": {
    "type": "Font",
    "selector": ".blog-post .post-details .post-stats"
  },
  "postStatsLinkFont": {
    "type": "Font",
    "selector": ".blog-post .post-details .post-stats a"
  },
  "postStatsLinkFontHover": {
    "type": "Font",
    "selector": ".blog-post .post-details .post-stats a:hover",
    "desktop":true
  },
  "postStatsBackground": {
    "type": "Background",
    "selector": ".blog-post .post-details .post-stats"
  },
  "postStatsMargin": {
    "type": "Margin",
    "selector": ".blog-post .post-details .post-stats"
  },
  "postStatsPadding": {
    "type": "Padding",
    "selector": ".blog-post .post-details .post-stats"
  },
  "postStatsBorder": {
    "type": "Border",
    "selector": ".blog-post .post-details .post-stats"
