  "postImageVisibility": {
    "type": "Toggle",
    "rules": {
      "true": {
        ".post-image": "display:block"
      },
      "false": {
        ".post-image": "display:none"
      }
    }
  },
  "postImageAlign": {
    "type": "Radio",
    "value": "left",
    "rules": {
      "left": {
        ".post-image": "text-align:left; float:none"
      },
      "center": {
        ".post-image": "text-align:center; float:none"
      },
      "right": {
        ".post-image": "text-align:right; float:none"
      },
      "float": {
        ".post-image": "float:left"
      },
      "floatR": {
        ".post-image": "float:right"
      }
    },
    "rtlRules": {
      "left": {
        ".post-image": "text-align:right; float:none"
      },
      "center": {
        ".post-image": "text-align:center; float:none"
      },
      "right": {
        ".post-image": "text-align:left; float:none"
      },
      "float": {
        ".post-image": "float:right"
      },
      "floatR": {
        ".post-image": "float:left"
      }
    }
  },
  "postImageMargin": {
    "type": "Margin",
    "selector": ".post-image"
  },
  "postImageBorder": {
    "type": "Border",
